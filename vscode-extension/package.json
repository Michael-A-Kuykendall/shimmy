{
  "name": "shimmy",
  "displayName": "Shimmy - 5MB Ollama Alternative",
  "description": "Lightning-fast local AI inference server. 5MB binary, <100ms startup, OpenAI API compatible. Dynamic port management, zero-config.",
  "version": "0.1.0",
  "publisher": "Michael-A-Kuykendall",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ollama",
    "llama",
    "inference", 
    "ai",
    "gguf",
    "local ai",
    "openai api",
    "lora",
    "fast"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:jupyter", 
    "workspaceContains:**/*.gguf",
    "workspaceContains:**/*.safetensors"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shimmy.start",
        "title": "Start Shimmy Server",
        "category": "Shimmy"
      },
      {
        "command": "shimmy.stop", 
        "title": "Stop Shimmy Server",
        "category": "Shimmy"
      },
      {
        "command": "shimmy.serve",
        "title": "Serve Model with Shimmy",
        "category": "Shimmy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "shimmy.serve",
          "when": "resourceExtname == .gguf || resourceExtname == .safetensors",
          "group": "shimmy"
        }
      ]
    },
    "configuration": {
      "title": "Shimmy",
      "properties": {
        "shimmy.autoPort": {
          "type": "boolean",
          "default": true,
          "description": "Use automatic port allocation (recommended)"
        },
        "shimmy.manualPort": {
          "type": "number",
          "default": 11435,
          "description": "Manual port override (only if autoPort is false)"
        },
        "shimmy.binaryPath": {
          "type": "string", 
          "default": "shimmy",
          "description": "Path to shimmy binary"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Michael-A-Kuykendall/shimmy.git",
    "directory": "vscode-extension"
  },
  "license": "MIT"
}
